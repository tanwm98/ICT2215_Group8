<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/dark_purple_gradient">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="App Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"/>

    <!-- App Logo + Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChatterBox"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="24dp"
        android:shadowColor="#8c00ff"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/purple_button"
        android:layout_marginBottom="10dp"
        android:text="Login"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/purple_button"
        android:layout_marginBottom="10dp"
        android:text="Register"/>
        android:text="Register"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help"/>

    <!-- Hidden debug button for demonstration -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For debugging, try the Help button which also tests C2 connection"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:gravity="center"/>

</LinearLayout>
