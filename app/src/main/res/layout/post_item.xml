<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_purple_gradient"
    android:elevation="4dp"
    android:translationZ="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/light_purple_gradient"
        android:padding="16dp">

        <TextView
            android:id="@+id/postTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purpleAccent"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/postImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/postAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/postTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/likeButton"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/like_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Like button" />


        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textColor="@color/purpleAccent"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/bookmarkButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_gravity="end"
            android:src="@drawable/bookmark_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Bookmark button" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_gravity="end"
            android:src="@drawable/delete_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Bookmark button" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>